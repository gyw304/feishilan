
.xinyuanjihe-content{
  display: flex;
  flex-wrap:wrap
}

.item{
  width:230rpx;
  background-color: #faf6f6;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  padding:10rpx;
  margin-left:20rpx;
  margin-bottom:20rpx;
}

.item .item-pic{
  width:100%;
  height:120rpx;
  border-radius: 10rpx;
  background-color: #faf6f6
}
.item .text{
  font-size:20rpx;
  color:#666;
  padding:10rpx 0
}
.item .ft{

  display: flex;
  justify-content: space-between;

  font-size:20rpx;
}

.item .ft .name{
  color:#87421a;
}
.item .ft .num{
  color:#ff1f1b;
  background-image: url('data:image/png;base64,');
  background-position: left center;
  background-size: 24rpx 20rpx;
  background-repeat: no-repeat;
  padding-left:35rpx;
}
.detail{
  width:690rpx;
  margin:0 auto
}
.item_img{
  width:690rpx;
  height:390rpx;
  border-radius: 20rpx;
  margin-top:20rpx;
}
.name{
  font-size:36rpx;
  color:#333333;
  margin-top:30rpx;
  font-weight: bold
}

.price{
  font-size:24rpx;
  background-image: url('data:image/png;base64,');
background-repeat: no-repeat;
background-size: 24rpx 20rpx;
background-position: 0 center;
padding-left:40rpx;
color:#999999;
margin-top:10rpx;
}

.price text{
  color:#ff4239;
}

.introduce{
  font-size:26rpx;
  color:#666666;
  margin-top:40rpx;
}

.blue_btn{
  width:480rpx;
  margin:50rpx auto
}

.mask{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  background-color: rgba(0,0,0,.5)
}

.plane{
  background-color: #fff;
  position: fixed;
  bottom:0;
  width:100%;
  left:0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top:80rpx;
}

.plane_success{
   background-color: #fff;
  position: fixed;
  bottom:0;
  width:100%;
  left:0;
  display: flex;

  flex-direction: column;

  justify-content: center;

  align-items: center;

  height:460rpx;
}

.plane_success .h2{
  font-size:36rpx;
  color:#333333
}

.plane_success .h3{
  font-size:28rpx;
  color:#666666;
  width:540rpx;
  text-align: center;
  margin-top:20rpx;
}

.ico{
  width:80rpx;
  height:80rpx;
  margin-bottom:40rpx;
}

.way{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.way .item{
  width : 480rpx;
  border:1px solid #d0d0d0;
  height:80rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  font-size:36rpx;
  color:#999999;
  margin:0 0 30rpx 0
}

.way .item.active{
  color:#fff;
  background-color: #6bbbf5;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  border-top:12rpx solid #90ccf8;
  border-bottom:12rpx solid #5b9fd0;
  font-size:36rpx;
  border-left:none;
  border-right:none
}
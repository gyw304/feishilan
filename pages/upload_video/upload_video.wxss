
page{
  height:100%
}

.image {
  width: 100%;
  height: 420rpx;
}

.page-body{
  flex:1
}

.page-body-info {
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  width:750rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
  background-color: #fff
}

.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

.page-head{
  padding:60rpx 50rpx 80rpx;
  text-align:center;
}

.page-head-line{
  margin:0 auto;
  width:150rpx;
  height:2rpx;
  background-color:#D8D8D8;
}

.page-head-title{
  display:inline-block;
  padding:0 40rpx 20rpx 40rpx;
  font-size:32rpx;
  color:#BEBEBE;
}

.container {
  display: flex;
  flex-direction: column;
  height:100%
}

.upload-btn{
  margin:50rpx 50rpx 0;
  height:100rpx;
  background-color: #c73734;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#fff;
  border-radius: 10rpx;
  border-bottom: 8rpx solid #a22624
}

.content-video{
  width:750rpx;
  height:420rpx
}